<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.tutorials.androidfactory.MemeCreator">

    <EditText
        android:id="@+id/topET"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="Top Text"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/bottomET"
        android:layout_width="320dp"
        android:hint="Bottom Text"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topET"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />


    <LinearLayout
        android:id="@+id/buttonsLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottomET"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/createMemeB"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Create Meme" />

        <Button
            android:id="@+id/changeMemeB"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Change Meme" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/memeRL"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_below="@+id/buttonsLL"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/meme_1">

        <TextView
            android:id="@+id/topTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Top Message"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/bottomTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="Bottom Message"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textColor="#ffffff" />
    </RelativeLayout>

</RelativeLayout>
